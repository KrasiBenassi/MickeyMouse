<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           android:text="@string/action_settings"
           android:textSize="35sp"
           android:textColor="#0A5688"
           android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <EditText
            android:id="@+id/etRegUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_top"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="@string/reg_user"
            android:padding="10dp"
            android:textColorHint="#93bad3" />

        <EditText
            android:id="@+id/etRegConfPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="97dp"
            android:background="@drawable/edit_top"
            android:ems="10"
            android:hint="@string/reg_confPass"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#93bad3" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/etRegPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_top"
            android:ems="10"
            android:hint="@string/reg_pass"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#93bad3" />

        <EditText
            android:id="@+id/etRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="41dp"
            android:background="@drawable/edit_top"
            android:ems="10"
            android:hint="@string/reg_email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="#93bad3" />

</RelativeLayout>
